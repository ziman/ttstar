-- vim: ft=idris

data T : Type.
  A : T,
  B : T.

-- built-in primitive op
postulate Op : (x :R: T) -> (y :R: T) -> T.

id (y : T) : T = y.

constA (_ : T) : T = A.

apply (f : T -> T) (x : T) : T = f x.

test1 : T
  = [apply : (T -> T) -> T -> T] id B.

test2 : T
  = [apply : (T -> T) -> T -> T] constA B.

main :R: T
  = Op test1 test2.
