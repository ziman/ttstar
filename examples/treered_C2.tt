-- vim: ft=idris

data N : Type where
  Z : N,
  S : (x : N) -> N.

data Vec : N -> Type where
  Nil : Vec Z.

vlen (n : N) (xs : Vec n) : N
  = case xs of
      Nil | n = Z => n.

main : N
  = vlen Z Nil.

